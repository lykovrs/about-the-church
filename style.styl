@import 'node_modules/nib/lib/nib/'

global-reset()
reset-html5()

@import 'styl/base'
@import 'styl/botton'
@import 'styl/loader'

*
  box-sizing(border-box)

html
  height 100%

body
  width 100%
  height 100%
  background-color #f6f6f6
  color base-font-color
  font $basefont/$baseline Georgia, serif
  background-image(url("images/bg.png"))

.wrapper
  margin 0 auto
  min-height 100%
  max-width 1220px
  min-width 960px
  height auto !important
  height 100%
  background-color #fff

/* Header
-----------------------------------------------------------------------------*/
@import 'styl/header'
@import 'styl/authorization'
@import 'styl/menu-top'
@import 'styl/ui-dialog'
@import 'styl/dialog'

/* Middle
-----------------------------------------------------------------------------*/
.middle
  position relative
  padding 0 0 125px
  width 100%
  clearfix()

  &__all-width-content
    clearfix()
    clear both

  &__header
    font-size 28px
    padding 24px 44px 0
    margin-bottom 0

  &__content
    padding 0 44px

.container
  float left
  overflow hidden
  width 100%

.content
  padding 0 0 0 325px

@media screen and (max-width: 1220px)
  .content
    padding 0 0 0 275px

@import 'styl/main-hint'
@import 'styl/jcarousel'
@import 'styl/inner'
@import 'styl/finder'
@import 'styl/helper'
@import 'styl/ui-autocomplete'
@import 'styl/autocomplete'
@import 'styl/ui-selectmenu'
@import 'styl/selectmenu'
@import 'styl/cards'
@import 'styl/info-pic'
@import 'styl/informer'
@import 'styl/scroll-pane'
@import 'styl/tiler'
@import 'styl/pagination'

/* Left Sidebar
-----------------------------------------------------------------------------*/
.left-sidebar
  position relative
  float left
  margin-left -100%
  width 325px
  margin-bottom 25px

@media screen and (max-width: 1220px)
  .left-sidebar
    width 275px

@import 'styl/m-menu'
@import 'styl/ui-datepicker'
@import 'styl/m-datepicker'
@import 'styl/news'
@import 'styl/comment'

/* Footer
-----------------------------------------------------------------------------*/

@import 'styl/footer'

