.scroll-pane
  width 100%
  height 400px
  overflow auto
  color #404040

  &__wrapper
    background bg-block
    padding 0 0 0 20px
    margin-bottom 40px


  .jspContainer
    overflow hidden
    position relative

  .jspPane
    position absolute
    /*padding 25px*/

  .jspVerticalBar
    position absolute
    top 0
    right 0
    width 40px
    height 100%
    background red
    .jspArrow
      height 40px
      &:focus
        outline none

  .jspHorizontalBar
    position absolute
    bottom 0
    left 0
    width 100%
    height 40px
    background red
    .jspCap
      float left
    .jspArrow
      width 40px
      float left
      height 100%

  .jspCap
    display none

  .jspTrack
    background bg-block
    position relative

  .jspDrag
    background #bbd
    position relative
    top 0
    left 0
    cursor pointer
    display none

  .jspHorizontalBar .jspTrack,
  .jspHorizontalBar .jspDrag
    float left
    height 100%

  .jspArrow
    background #ffffff
    position relative
    text-indent -20000px
    display block
    cursor pointer
    padding 0
    margin 0

    &:hover
      background base-font-color

    &:before
      display block
      content ""
      width 17px
      height 11px
      position absolute
      top 50%
      left 50%
      margin -5px 0 0 -9px
      background: url("images/site-icons.png") no-repeat;

    &.jspArrowUp
      &:before
        background-position  -16px -65px

      &:hover
        &:before
          background-position  0 -65px


    &.jspArrowDown
      &:before
        background-position  -16px -84px

      &:hover
        &:before
          background-position  0 -84px

    &.jspDisabled
      cursor default

      &:hover
        background #fff

      &.jspArrowUp:before
        opacity .5
        background-position  -16px -65px

      &.jspArrowDown:before
        opacity .5
        background-position  -16px -84px


.jspCorner
    background #eeeef4
    float left
    height 100%


*
  html
    .jspCorner
      margin 0 -3px 0 0

.horizontal-only
  height auto
  max-height 400px
