@import 'node_modules/nib/lib/nib/'
@import 'blocks/base'

global-reset()
nested-reset()
reset-font()
reset-box-model()
reset-body()
reset-table()
reset-table-cell()
reset-html5()

*
  box-sizing(border-box)

html
  height 100%

body
  width 100%
  height 100%
  background-color #f6f6f6
  color base-font-color
  font 16px/20px Georgia, serif
  background-image(url("images/bg.png"))

.wrapper
  margin 0 auto
  min-height 100%
  width 1220px
  height auto !important
  height 100%
  background-color #fff

/* Header
-----------------------------------------------------------------------------*/
@import 'blocks/header'
@import 'blocks/authorization'
@import 'blocks/menu-top'
@import 'blocks/main-hint'



















/* Middle
-----------------------------------------------------------------------------*/
.middle
  position relative
  padding 0 0 125px
  width 100%

.middleafter
  display table
  clear both
  content ''

.container
  float left
  overflow hidden
  width 100%

.content
  padding 0 0 0 345px



/* Left Sidebar
-----------------------------------------------------------------------------*/
.left-sidebar
  position relative
  float left
  margin-left -100%
  width 325px
  background #B5E3FF



/* Footer
-----------------------------------------------------------------------------*/
.footer
  position relative
  margin -125px auto 0
  width 1220px
  height 125px
  background #BFF08E
