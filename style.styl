@import 'node_modules/nib/lib/nib/'
@import 'blocks/base'

global-reset()
reset-html5()

*
  box-sizing(border-box)

html
  height 100%

body
  width 100%
  height 100%
  background-color #f6f6f6
  color base-font-color
  font 16px/20px Georgia, serif
  background-image(url("images/bg.png"))

.wrapper
  margin 0 auto
  min-height 100%
  width 1220px
  height auto !important
  height 100%
  background-color #fff

/* Header
-----------------------------------------------------------------------------*/
@import 'blocks/header'
@import 'blocks/authorization'
@import 'blocks/menu-top'
@import 'blocks/dialog'

/* Middle
-----------------------------------------------------------------------------*/
.middle
  position relative
  padding 0 0 125px
  width 100%

  clearfix()

.middleafter
  display table
  clear both
  content ''

.container
  float left
  overflow hidden
  width 100%

.content
  padding 0 0 0 325px

@import 'blocks/main-hint'
@import 'blocks/jcarousel'





/* Left Sidebar
-----------------------------------------------------------------------------*/
.left-sidebar
  position relative
  float left
  margin-left -100%
  width 325px


@import 'blocks/m-menu'
@import 'blocks/m-datepicker'
@import 'blocks/news'

/* Footer
-----------------------------------------------------------------------------*/

@import 'blocks/footer'

