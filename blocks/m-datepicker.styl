.m-datepicker
  background bg-block
  margin 20px 0
  padding 14px 0 24px

  .ui-datepicker
    margin-left 30px


  .ui-datepicker-title
    font-size  20px
    color #000

  .ui-datepicker-year
    display none

  .ui-datepicker th
    font-weight normal
    color old-brick
    padding 2px 0 4px
    font-size 11px
    text-transform uppercase

  .ui-datepicker td span,
  .ui-datepicker td a
    font-size 15px
    color base-font-color
    text-align center
    padding 5px

  .ui-datepicker td a.ui-state-active
    color #ffffff
    background old-brick

  .ui-datepicker-prev,
  .ui-datepicker-next
    top 7px

    .ui-icon,
    .ui-icon
      width 18px
      height 18px
      background url("images/site-icons.png") no-repeat 2px -30px

   .ui-datepicker-next
     .ui-icon
       background-position -15px -30px

