.jcarousel
  position relative
  overflow hidden
  relative
  margin-bottom 22px

  &_t_card
    margin  0 60px
    font-size 14px

  &__wrapper
    position: relative
    background bg-block
    padding 35px 0

  &__header
    background bg-block
    margin-top 25px

  cleafix()

  &>ul
    position relative
    margin 0
    padding 0
    width 20000em
    list-style none

  &__item
    position relative
    float left
    overflow hidden
    width 895px
    height 350px

    &_t_card
      width 530px
      height 200px
      margin-right 40px
      padding 25px 20px 20px 225px
      background #fff

  &__img
    &_t_card
      width 155px
      height 200px
      position absolute
      top 0
      left 0

  &__item-helper
    absolute bottom 29px left 50%
    display block
    padding 0 30px
    width 250px
    height 50px
    border 3px solid #ffffff
    background rgba(old-brick, .8)
    color #ffffff
    text-align center
    text-decoration none
    font-size 20px
    line-height 43px
    margin-left -125px

    &:hover
      background rgba(young-brick, .8)

  &__author
    color old-brick
    text-align right

  &__text
    margin-bottom 0

  &__control
    absolute top 50%
    display block
    width 40px
    height 40px
    background-color #fff
    margin-top -20px

    &:before
      display block
      margin 10px auto
      width 11px
      height 17px
      background url("images/site-icons.png") no-repeat
      content ""

    &:hover
      background-color base-font-color

    &_t_prev
      left 0

      &:before
        background-position -1px -30px

      &:hover
        &:before
          background-position -1px -48px


    &_t_next
      right 0

      &:before
        background-position -19px -30px

      &:hover
        &:before
          background-position -19px -48px

    &_t_prev.inactive
      background-color #fff

      &:before
        opacity .5

      &:hover
        &:before
          background-position -1px -30px


    &_t_next.inactive
      background-color #fff

      &:before
        opacity .5

      &:hover
        &:before
          background-position -19px -30px



