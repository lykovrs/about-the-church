@import 'node_modules/nib/lib/nib/'

global-reset()
reset-html5()

@import 'blocks/base'
@import 'blocks/botton'
@import 'blocks/loader'

*
  box-sizing(border-box)

html
  height 100%

body
  width 100%
  height 100%
  background-color #f6f6f6
  color base-font-color
  font $basefont/$baseline Georgia, serif
  background-image(url("images/bg.png"))

.wrapper
  margin 0 auto
  min-height 100%
  max-width 1220px
  min-width 960px
  height auto !important
  height 100%
  background-color #fff

/* Header
-----------------------------------------------------------------------------*/
@import 'blocks/header'
@import 'blocks/authorization'
@import 'blocks/menu-top'
@import 'blocks/dialog'

/* Middle
-----------------------------------------------------------------------------*/
.middle
  position relative
  padding 0 0 125px
  width 100%
  clearfix()

  &__all-width-content
    clearfix()

  &__header
    font-size 28px
    padding 24px 44px 0
    margin-bottom 0

  &__content
    padding 0 44px

.container
  float left
  overflow hidden
  width 100%

.content
  padding 0 0 0 325px

@media screen and (max-width: 1220px)
  .content
    padding 0 0 0 275px

@import 'blocks/main-hint'
@import 'blocks/jcarousel'
@import 'blocks/inner'
@import 'blocks/finder'
@import 'blocks/helper'
@import 'blocks/ui-autocomplete'
@import 'blocks/ui-selectmenu'
@import 'blocks/cards'
@import 'blocks/info-pic'
@import 'blocks/informer'
@import 'blocks/scroll-pane'
@import 'blocks/tiler'
@import 'blocks/pagination'

/* Left Sidebar
-----------------------------------------------------------------------------*/
.left-sidebar
  position relative
  float left
  margin-left -100%
  width 325px

@media screen and (max-width: 1220px)
  .left-sidebar
    width 275px

@import 'blocks/m-menu'
@import 'blocks/m-datepicker'
@import 'blocks/news'
@import 'blocks/comment'

/* Footer
-----------------------------------------------------------------------------*/

@import 'blocks/footer'

